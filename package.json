{
  "name": "web-page-instagram",
  "version": "0.0.0",
  "description": "Universal Instagram CMS based on Nuxt.js",
  "author": "Sapphire",
  "private": true,
  "scripts": {
    "generate": "nuxt generate",
    "build": "nuxt build",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "prettier": "prettier --write '{client,server}/**/*.{vue,js}'",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "lint:stage": "npm run prettier && npm run lint:fix"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint:stage",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node utils/verify-commit.js"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/dotenv": "^1.4.0",
    "cross-env": "^5.2.0",
    "element-ui": "^2.4.11",
    "express": "^4.16.4",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@vue/eslint-config-standard": "^5.1.0",
    "babel-eslint": "^10.0.3",
    "chalk": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-nuxt": "^0.5.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "node-sass": "^4.13.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2"
  }
}
