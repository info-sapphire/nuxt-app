{
  "name": "nuxt-app",
  "version": "0.1.0",
  "description": "Admin UI and API for smartmedia projects",
  "author": "Sapphire",
  "private": true,
  "scripts": {
    "generate": "nuxt generate",
    "build": "nuxt build",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "server": "cross-env NUXT_MODE=off npm run dev",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "prettier": "prettier --write '{client,server}/**/*.{js,vue,scss,json}' '!client/assets/**/*.js'",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "lint:stage": "npm run prettier && npm run lint:fix",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": "13.x"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "npm run lint:stage",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verifyCommit.js"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/dotenv": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-timeout": "^1.9.0",
    "consola": "^2.11.3",
    "cookie": "^0.4.0",
    "cross-env": "^5.2.0",
    "element-ui": "^2.13.0",
    "express": "^4.16.4",
    "helmet": "^3.21.3",
    "js-cookie": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.9.5",
    "multer": "^1.4.2",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.0.0",
    "nuxt-svg-loader": "^1.2.0",
    "q-flat": "^1.0.7",
    "sharp": "^0.25.2",
    "vue-infinite-loading": "^2.4.5",
    "vue-slicksort": "^1.1.3",
    "vuedraggable": "^2.23.2"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.2",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "babel-eslint": "^10.1.0",
    "chalk": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-nuxt": "^0.5.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2"
  }
}
